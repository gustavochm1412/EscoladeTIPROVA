          },
          "response": []
        },
        {
          "name": "Erro - Periférico sem nome",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{baseUrl}}/computadores/1/perifericos",
              "host": ["{{baseUrl}}"],
              "path": ["computadores", "1", "perifericos"]
            },
            "description": "Exemplo de erro de validação - nome do periférico obrigatório"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Log da requisição",
          "console.log('Executando:', pm.request.method, pm.request.url);"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Testes básicos de resposta",
          "pm.test('Status code is successful', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204]);",
          "});",
          "",
          "pm.test('Response time is less than 2000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(2000);",
          "});",
          "",
          "// Log da resposta",
          "console.log('Resposta:', pm.response.code, pm.response.status);",
          "if (pm.response.text()) {",
          "    console.log('Body:', pm.response.text());",
          "}"
        ]
      }
    }
  ]
}

