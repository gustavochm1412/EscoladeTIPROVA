              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cor\": \"Preto\",\n  \"dataFabricacao\": 2024\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/computadores",
              "host": ["{{baseUrl}}"],
              "path": ["computadores"]
            },
            "description": "Exemplo de erro de validação - nome obrigatório"
          },
          "response": []
        },
        {
          "name": "Erro - Computador sem cor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"PC Teste\",\n  \"dataFabricacao\": 2024\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/computadores",
              "host": ["{{baseUrl}}"],
              "path": ["computadores"]
            },
            "description": "Exemplo de erro de validação - cor obrigatória"
          },
          "response": []
        },
        {
          "name": "Erro - Computador sem data de fabricação",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"PC Teste\",\n  \"cor\": \"Preto\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/computadores",
